{
    "manifest_version": 2,
    "name": "PassFF-hardened",
    "version": "_VERSIONHOLDER_",
    "description": "Hardened secure version of 'pass' CLI tool helper for Firefox. Main difference from nonhardened passff: the addon does not ask to view your tabs or to inject JS to webpages.",
    "default_locale": "en",

    "icons": {
        "128": "icon.png"
    },

    "browser_action": {
        "browser_style": false,
        "default_icon": "skin/icon.svg",
        "theme_icons": [{
                "light": "skin/icon-light.svg",
                "dark": "skin/icon.svg",
                "size": 16
            }],
        "default_popup": "content/menu.html"
    },

    "permissions": [
        "storage",
        "nativeMessaging",
        "clipboardWrite",
        "contextMenus",
        "webRequest",
        "webRequestBlocking"
    ],

    "options_ui": {
        "page": "content/preferences.html"
    },

    "background": {
        "scripts": [
            "modules/util.js",
            "modules/main.js",
            "modules/preferences.js",
            "modules/pass.js",
            "modules/menu.js",
            "modules/auth.js",
            "modules/page.js"
        ]
    },

    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Y"
            }
        }
    },

    "web_accessible_resources": [
        "skin/paper-plane.png",
        "skin/pencil-square.png",
        "skin/icon-light.png",
        "icon.png"
    ],

    "applications": {
        "gecko": {
            "id": "passff@paulmillr.com",
            "strict_min_version": "50.0"
        }
    }
}
